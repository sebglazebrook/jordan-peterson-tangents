<!DOCTYPE html>
<html>
  <head>
  <style>
    <%= inline_styles %>
  </style>
  <script>
    window.postData = <%= posts.to_json %>;
  </script>
  </head>
  <body>
    <div class="outer-container">
      <div class="inner-container" id="root">
        <div class="header">
          <div class="title">
            <%= site_title %>
          </div>
          <div class="add">
            <div class="link-wrapper">
              <a href="/posts/add">+</a>
            </div>
          </div>
        </div>
        <div class="content">
          <% posts.each do |post| %>
            <div class="post">
              <div class="title">
                <%= post.title %>
              </div>
              <div class="video-wrapper">
                <div class="video">
                  <iframe width="100%" height="315" src="<%= post.video_url %>"></iframe>
                </div>
                <div class="metadata">
                  <div class="start-time">
                    Starts: <%= post.start_time %>
                  </div>
                  <div class="duration">
                    Duration: <%= post.duration %>
                  </div>
                  <div class="tags">
                    <% post.tags.each do |tag| %>
                      <div><%= tag.text %></div>
                    <% end %>
                  </div>
                </div>
              </div>
              <div class="summary">
                <%= post.synopsis %>
              </div>
            </div>
          <% end %>
        </div>
        <div class="footer"></div>
      </div>
      <div class="left-buffer"></div>
      <div class="right-buffer"></div>
    </div>
    <script>
      <%= inline_javascript %>
    </script>
  </body>
</html>
